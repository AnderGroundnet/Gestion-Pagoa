        async function saveFinishedProduct() {
            const producidas = parseInt(document.getElementById('finProducidas').value);
            
            const finishedData = {
                numero_lote: parseInt(document.getElementById('finLote').value),
                estilo: document.getElementById('finEstilo').value,
                tipo_envase: document.getElementById('finEnvase').value,
                unidades_producidas: producidas,
                unidades_vendidas: 0,
                fecha_envasado: new Date().toISOString().split('T')[0]
            };
            
            const { data, error } = await supabase
                .from('producto_terminado')
                .insert([finishedData]);
            
            if (error) {
                showNotification('Error al guardar: ' + error.message, 'error');
            } else {
                showNotification('Producto agregado correctamente', 'success');
                closeModal();
                loadModule('finished');
            }
        }
        
        function showUserForm() {
            const form = `
