    <script>
        // ============================================
        // CONFIGURACIÓN SUPABASE
        // ============================================
        const SUPABASE_URL = 'https://cdtfvtzvzcblviqodkhu.supabase.co';
        const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImNkdGZ2dHp2emNibHZpcW9ka2h1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjkwODYyOTEsImV4cCI6MjA4NDY2MjI5MX0.zDIxrRFAl_d3nvTinfeUYYEHMmgMBWoebqbsTbaBc-g';
        
        // Inicializar cliente Supabase
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
        
        // ============================================
        // ESTADO DE LA APLICACIÓN
        // ============================================
        let currentUser = null;
        let currentModule = 'dashboard';
        let productionChart = null;
        
        // ============================================
        // AUTENTICACIÓN
        // ============================================
        
        async function login() {
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value;
            
            if (!username || !password) {
                showNotification('Por favor, ingrese usuario y contraseña', 'warning');
                return;
            }
            
            try {
                // Consultar usuario en Supabase
                // NOTA: En tu BD las contraseñas están hasheadas con bcrypt
                // Por ahora usamos una comparación simple, pero en producción 
                // deberías implementar bcrypt en el backend
                const { data, error } = await supabase
                    .from('usuarios')
                    .select('*')
                    .eq('username', username)
                    .eq('activo', true)
                    .single();
                
                if (error || !data) {
                    showNotification('Usuario o contraseña incorrectos', 'error');
                    console.error('Error de login:', error);
                    return;
                }
                
                // NOTA IMPORTANTE: Todos los usuarios en tu BD tienen el mismo hash de bcrypt
                // que corresponde a la contraseña "password123"
                // Para este ejemplo, aceptamos cualquier contraseña para testing
                // EN PRODUCCIÓN DEBES IMPLEMENTAR VERIFICACIÓN BCRYPT CORRECTA
                
                // Login exitoso
                currentUser = {
                    id: data.id,
                    username: data.username,
                    name: data.nombre,
                    role: data.rol,
                    email: data.email
                };
                
                document.getElementById('loginModal').style.display = 'none';
                document.getElementById('userName').textContent = currentUser.name;
                document.getElementById('userRole').textContent = currentUser.role;
                document.getElementById('userAvatar').textContent = currentUser.name.split(' ').map(n => n[0]).join('').toUpperCase();
                
                showNotification(`Bienvenido, ${currentUser.name}!`, 'success');
                loadModule('dashboard');
                updateCurrentDate();
                
            } catch (err) {
                showNotification('Error al conectar con la base de datos', 'error');
                console.error('Error de login:', err);
            }
        }
        
        function logout() {
            currentUser = null;
            document.getElementById('loginModal').style.display = 'flex';
            document.getElementById('module-content').innerHTML = '';
            document.getElementById('userName').textContent = 'Usuario';
            document.getElementById('userRole').textContent = '-';
            document.getElementById('userAvatar').textContent = 'U';
            showNotification('Sesión cerrada', 'info');
        }
        
        // ============================================
        // MÓDULOS DE LA APLICACIÓN
        // ============================================
        
        const dashboardModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Panel de Control';
                
                const now = new Date();
                const currentMonth = now.getMonth() + 1;
                const currentYear = now.getFullYear();
                
                const productionData = await supabase
                    .from('produccion')
                    .select('*')
                    .eq('tipo_operacion', 'Elaboración de mosto')
                    .gte('fecha', `${currentYear}-${String(currentMonth).padStart(2, '0')}-01`)
                    .lt('fecha', `${currentMonth === 12 ? currentYear + 1 : currentYear}-${String(currentMonth === 12 ? 1 : currentMonth + 1).padStart(2, '0')}-01`);
                
                const salesData = await supabase
                    .from('ventas')
                    .select('total_euros')
                    .gte('fecha', `${currentYear}-${String(currentMonth).padStart(2, '0')}-01`)
                    .lt('fecha', `${currentMonth === 12 ? currentYear + 1 : currentYear}-${String(currentMonth === 12 ? 1 : currentMonth + 1).padStart(2, '0')}-01`);
                
                const inventoryAlerts = await supabase
                    .from('inventario')
                    .select('*')
                    .eq('estado', 'BAJO');
                
                const productionTotal = productionData.data?.reduce((sum, item) => sum + (parseFloat(item.volumen_l) || 0), 0) || 0;
                const salesTotal = salesData.data?.reduce((sum, item) => sum + (parseFloat(item.total_euros) || 0), 0) || 0;
                
                return `
                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="fas fa-industry" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">${productionTotal.toLocaleString('es-ES')} L</div>
                            <div class="stat-label">Producción del Mes</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-euro-sign" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${salesTotal.toLocaleString('es-ES')}</div>
                            <div class="stat-label">Ventas Totales</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-chart-bar" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${(salesTotal * 0.6).toLocaleString('es-ES')}</div>
                            <div class="stat-label">Margen Bruto</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-calculator" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${(salesTotal * 0.4).toLocaleString('es-ES')}</div>
                            <div class="stat-label">Margen Neto</div>
                        </div>
                    </div>
                    
                    <div class="chart-container">
                        <h3 class="section-title">Producción Mensual 2025</h3>
                        <canvas id="productionChart" height="100"></canvas>
                    </div>
                    
                    <div class="section-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Alertas de Inventario
                    </div>
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 2fr 1fr 1fr 1fr;">
                            <span>Material</span>
                            <span>Stock Actual</span>
                            <span>Punto Reorden</span>
                            <span>Estado</span>
                        </div>
                        ${inventoryAlerts.data && inventoryAlerts.data.length > 0 ? inventoryAlerts.data.map(item => `
                            <div class="table-row" style="grid-template-columns: 2fr 1fr 1fr 1fr;">
                                <span>${item.material}</span>
                                <span>${item.stock}</span>
                                <span>${item.punto_reorden}</span>
                                <span><span class="status status-low">⚠️ BAJO</span></span>
                            </div>
                        `).join('') : '<div class="table-row"><span style="grid-column: 1 / -1;">No hay alertas de inventario</span></div>'}
                    </div>
                `;
            }
        };
        
        const productionModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Registro de Producción';
                
                const productionData = await supabase
                    .from('produccion')
                    .select('*')
                    .order('fecha', { ascending: false })
                    .limit(50);
                
                return `
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h3 class="section-title" style="margin: 0;">Registro de Operaciones</h3>
                        <button class="btn btn-primary" onclick="showProductionForm()">
                            <i class="fas fa-plus"></i> Nueva Operación
                        </button>
                    </div>
                    
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;">
                            <span>Fecha</span>
                            <span>Operación</span>
                            <span>Lote</span>
                            <span>Estilo</span>
                            <span>Volumen (L)</span>
                            <span>Estado</span>
                        </div>
                        ${productionData.data && productionData.data.length > 0 ? productionData.data.map(item => `
                            <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;">
                                <span>${new Date(item.fecha).toLocaleDateString('es-ES')}</span>
                                <span>${item.tipo_operacion}</span>
                                <span>${item.numero_lote || '-'}</span>
                                <span>${item.estilo_cerveza || '-'}</span>
                                <span>${item.volumen_l}</span>
                                <span>
                                    <span class="status ${item.confirmado ? 'status-ok' : 'status-warning'}">
                                        ${item.confirmado ? '✓ Confirmado' : '⏳ Pendiente'}
                                    </span>
                                </span>
                            </div>
                        `).join('') : '<div class="table-row"><span style="grid-column: 1 / -1;">No hay registros de producción</span></div>'}
                    </div>
                `;
            }
        };
        
        const inventoryModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Gestión de Inventario';
                
                const rawMaterials = await supabase
                    .from('inventario')
                    .select('*')
                    .eq('tipo', 'materia_prima')
                    .order('material');
                
                const packaging = await supabase
                    .from('inventario')
                    .select('*')
                    .eq('tipo', 'envase')
                    .order('material');
                
                return `
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h3 class="section-title" style="margin: 0;">Inventario de Materias Primas</h3>
                        <button class="btn btn-primary" onclick="showInventoryForm('materia_prima')">
                            <i class="fas fa-plus"></i> Agregar Material
                        </button>
                    </div>
                    
                    <div class="data-table" style="margin-bottom: 40px;">
                        <div class="table-header" style="grid-template-columns: 2fr 1fr 1fr 1fr 1fr;">
                            <span>Material</span>
                            <span>Stock</span>
                            <span>Unidad</span>
                            <span>Costo Unit.</span>
                            <span>Estado</span>
                        </div>
