    <script>
        // ============================================
        // CONFIGURACIÓN SUPABASE
        // ============================================
        const SUPABASE_URL = 'https://cdtfvtzvzcblviqodkhu.supabase.co';
        const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImNkdGZ2dHp2emNibHZpcW9ka2h1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjkwODYyOTEsImV4cCI6MjA4NDY2MjI5MX0.zDIxrRFAl_d3nvTinfeUYYEHMmgMBWoebqbsTbaBc-g';
        
        // Inicializar cliente Supabase
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
        
        // ============================================
        // ESTADO DE LA APLICACIÓN
        // ============================================
        let currentUser = null;
        let currentModule = 'dashboard';
        
        // ============================================
        // MÓDULOS DE LA APLICACIÓN
        // ============================================
        
        // 1. MÓDULO: DASHBOARD (Panel de Control)
        const dashboardModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Panel de Control';
                
                // Obtener datos del mes actual
                const now = new Date();
                const currentMonth = now.getMonth() + 1;
                const currentYear = now.getFullYear();
                
                // Consultas a la base de datos (ejemplo)
                const productionData = await supabase
                    .from('produccion')
                    .select('*')
                    .gte('fecha', `${currentYear}-${currentMonth}-01`)
                    .lt('fecha', `${currentMonth === 12 ? currentYear + 1 : currentYear}-${currentMonth === 12 ? 1 : currentMonth + 1}-01`);
                
                const salesData = await supabase
                    .from('ventas')
                    .select('total')
                    .gte('fecha', `${currentYear}-${currentMonth}-01`)
                    .lt('fecha', `${currentMonth === 12 ? currentYear + 1 : currentYear}-${currentMonth === 12 ? 1 : currentMonth + 1}-01`);
                
                const inventoryAlerts = await supabase
                    .from('inventario')
                    .select('*')
                    .lt('stock', 'punto_reorden');
                
                // Calcular estadísticas
                const productionTotal = productionData.data?.reduce((sum, item) => sum + (item.volumen || 0), 0) || 0;
                const salesTotal = salesData.data?.reduce((sum, item) => sum + (item.total || 0), 0) || 0;
                
                return `
                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="fas fa-industry" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">${productionTotal.toLocaleString('es-ES')} L</div>
                            <div class="stat-label">Producción del Mes</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-euro-sign" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${salesTotal.toLocaleString('es-ES')}</div>
                            <div class="stat-label">Ventas Totales</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-chart-bar" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${(salesTotal * 0.6).toLocaleString('es-ES')}</div>
                            <div class="stat-label">Margen Bruto</div>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-calculator" style="color: var(--accent-gold);"></i>
                            <div class="stat-value">€${(salesTotal * 0.4).toLocaleString('es-ES')}</div>
                            <div class="stat-label">Margen Neto</div>
                        </div>
                    </div>
                    
                    <div class="chart-container">
                        <h3 class="section-title">Producción Mensual 2025</h3>
                        <canvas id="productionChart" height="100"></canvas>
                    </div>
                    
                    <div class="section-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Alertas de Inventario
                    </div>
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 2fr 1fr 1fr 1fr;">
                            <span>Material</span>
                            <span>Stock Actual</span>
                            <span>Punto Reorden</span>
                            <span>Estado</span>
                        </div>
                        ${inventoryAlerts.data?.map(item => `
                            <div class="table-row" style="grid-template-columns: 2fr 1fr 1fr 1fr;">
                                <span>${item.material}</span>
                                <span>${item.stock}</span>
                                <span>${item.punto_reorden}</span>
                                <span><span class="status status-low">⚠️ BAJO</span></span>
                            </div>
                        `).join('') || '<div class="table-row"><span>No hay alertas</span></div>'}
                    </div>
                    
                    <div class="section-title">
                        <i class="fas fa-wine-bottle"></i>
                        Stock Producto Terminado
                    </div>
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
                            <span>Estilo</span>
                            <span>Presentación</span>
                            <span>Stock</span>
                            <span>Lotes</span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
                            <span>Lager</span>
                            <span>Botella 330ml</span>
                            <span>990</span>
                            <span>1</span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
                            <span>Lager</span>
                            <span>Barril 30L</span>
                            <span>5</span>
                            <span>2</span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
                            <span>IPA</span>
                            <span>Botella 330ml</span>
                            <span>582</span>
                            <span>1</span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
                            <span>Gorri</span>
                            <span>Botella 330ml</span>
                            <span>2503</span>
                            <span>3</span>
                        </div>
                    </div>
                `;
            }
        };
        
        // 2. MÓDULO: PRODUCCIÓN
        const productionModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Registro de Producción';
                
                const productionData = await supabase
                    .from('produccion')
                    .select('*')
                    .order('fecha', { ascending: false })
                    .limit(50);
                
                return `
                    <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                        <h3 class="section-title">Registro de Operaciones</h3>
                        <button class="btn btn-primary" onclick="showProductionForm()">
                            <i class="fas fa-plus"></i> Nueva Operación
                        </button>
                    </div>
                    
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;">
                            <span>Fecha</span>
                            <span>Operación</span>
                            <span>Lote</span>
                            <span>Estilo</span>
                            <span>Volumen (L)</span>
                            <span>Estado</span>
                        </div>
                        ${productionData.data?.map(item => `
                            <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;">
                                <span>${new Date(item.fecha).toLocaleDateString('es-ES')}</span>
                                <span>${item.tipo_operacion}</span>
                                <span>${item.lote || '-'}</span>
                                <span>${item.estilo || '-'}</span>
                                <span>${item.volumen}</span>
                                <span>
                                    <span class="status ${item.estado === 'confirmado' ? 'status-ok' : 'status-warning'}">
                                        ${item.estado === 'confirmado' ? '✓ Confirmado' : '⏳ Pendiente'}
                                    </span>
                                </span>
                            </div>
                        `).join('') || '<div class="table-row"><span>No hay registros de producción</span></div>'}
                    </div>
                    
                    <div class="section-title">
                        <i class="fas fa-chart-pie"></i>
                        Resumen de Lotes
                    </div>
                    <div class="data-table">
                        <div class="table-header" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr;">
                            <span>Lote</span>
                            <span>Vol. Elaborado</span>
                            <span>Vol. Envasado</span>
                            <span>Vol. Disponible</span>
                            <span>Estado</span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr;">
                            <span>1</span>
                            <span>360 L</span>
                            <span>475 L</span>
                            <span>-115 L</span>
                            <span><span class="status status-warning">Parcialmente Envasado</span></span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr;">
                            <span>3</span>
                            <span>160 L</span>
                            <span>100 L</span>
                            <span>60 L</span>
                            <span><span class="status status-warning">Parcialmente Envasado</span></span>
                        </div>
                        <div class="table-row" style="grid-template-columns: 1fr 1fr 1fr 1fr 1fr;">
                            <span>5</span>
                            <span>600 L</span>
                            <span>200 L</span>
                            <span>400 L</span>
                            <span><span class="status status-warning">Parcialmente Envasado</span></span>
                        </div>
                    </div>
                `;
            }
        };
        
        // 3. MÓDULO: INVENTARIO
        const inventoryModule = {
            load: async () => {
                document.getElementById('pageTitle').textContent = 'Gestión de Inventario';
                
                const rawMaterials = await supabase
                    .from('inventario')
                    .select('*')
                    .eq('tipo', 'materia_prima')
                    .order('material');
                
                const packaging = await supabase
                    .from('inventario')
                    .select('*')
                    .eq('tipo', 'envase')
                    .order('material');
                
                return `
                    <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                        <h3 class="section-title">Inventario de Materias Primas</h3>
                        <button class="btn btn-primary" onclick="showInventoryForm('materia_prima')">
                            <i class="fas fa-plus"></i> Agregar Material
                        </button>
                    </div>
                    
                    <div class="data-table" style="margin-bottom: 40px;">
                        <div class="table-header" style="grid-template-columns: 2fr 1fr 1fr 1fr 1fr;">
                            <span>Material</span>
                            <span>Stock</span>
                            <span>Unidad</span>
                            <span>Costo Unit.</span>
                            <span>Estado</span>
                        </div>
                        ${rawMaterials.data?.map(item => `
                            <div class="table-row" style="grid-template-columns: 2fr 1fr 1fr 1fr 1fr;">
                                <span>${item.material}</span>
                                <span>${item.stock}</span>
                                <span>${item.unidad}</span>
                                <span>€${item.costo_unitario}</span>
                                <span>
                                    <span class="status ${item.stock > item.punto_reorden ? 'status-ok' : 'status-low'}">
                                        ${item.stock > item.punto_reorden ? '✓ OK' : '⚠️ BAJO'}
                                    </span>
                                </span>
                            </div>
                        `).join('') || '<div class="table-row"><span>No hay materiales registrados</span></div>'}
