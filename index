        async function saveSale() {
            const cantidad = parseFloat(document.getElementById('ventaCantidad').value);
            const precioUnitario = parseFloat(document.getElementById('ventaPrecio').value);
            
            const saleData = {
                fecha: document.getElementById('ventaFecha').value,
                cliente: document.getElementById('ventaCliente').value,
                estilo: document.getElementById('ventaEstilo').value,
                presentacion: document.getElementById('ventaPresentacion').value,
                cantidad: cantidad,
                precio_unitario: precioUnitario,
                canal: document.getElementById('ventaCanal').value,
                usuario_id: currentUser?.id || 1
            };
            
            const { data, error } = await supabase
                .from('ventas')
                .insert([saleData]);
            
            if (error) {
                showNotification('Error al guardar: ' + error.message, 'error');
            } else {
                showNotification('Venta registrada correctamente', 'success');
                closeModal();
                loadModule('sales');
            }
        }
        
