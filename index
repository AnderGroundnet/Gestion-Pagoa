        // ============================================
        // FUNCIONES PRINCIPALES
        // ============================================
        
        // Cargar módulo actual
        async function loadModule(moduleName) {
            currentModule = moduleName;
            
            // Actualizar navegación
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
                if (item.dataset.module === moduleName) {
                    item.classList.add('active');
                }
            });
            
            // Cargar contenido del módulo
            let content = '';
            switch (moduleName) {
                case 'dashboard':
                    content = await dashboardModule.load();
                    break;
                case 'production':
                    content = await productionModule.load();
                    break;
                case 'inventory':
                    content = await inventoryModule.load();
                    break;
                case 'sales':
                    content = await salesModule.load();
                    break;
                case 'recipes':
                    content = await recipesModule.load();
                    break;
                case 'finished':
                    content = await finishedModule.load();
                    break;
                case 'costs':
                    content = await costsModule.load();
                    break;
                case 'history':
                    content = await historyModule.load();
                    break;
                case 'users':
                    content = await usersModule.load();
                    break;
                default:
                    content = '<h3>Módulo no encontrado</h3>';
            }
            
            document.getElementById('module-content').innerHTML = content;
            
            // Inicializar gráficos si es necesario
            if (moduleName === 'dashboard') {
                initializeProductionChart();
            }
        }
        
        // Inicializar gráfico de producción
        function initializeProductionChart() {
            const ctx = document.getElementById('productionChart')?.getContext('2d');
            if (!ctx) return;
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                    datasets: [{
                        label: 'Producción (L)',
                        data: [0, 0, 0, 0, 0, 0, 360, 200, 160, 300, 600, 700],
                        borderColor: '#D4A574',
                        backgroundColor: 'rgba(212, 165, 116, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            labels: {
                                color: '#ffffff'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                color: '#b0b0b0'
                            },
                            grid: {
                                color: '#333'
                            }
                        },
                        x: {
                            ticks: {
                                color: '#b0b0b0'
                            },
                            grid: {
                                color: '#333'
                            }
                        }
                    }
                }
            });
        }
        
        // Mostrar formulario modal
        function showModal(title, content) {
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalBody').innerHTML = content;
            document.getElementById('modal').style.display = 'flex';
        }
        
        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }
        
        // Ejemplo de formulario para producción
        function showProductionForm() {
            const form = `
                <div class="form-group">
                    <label class="form-label">Fecha</label>
                    <input type="date" id="prodFecha" class="form-input" value="${new Date().toISOString().split('T')[0]}">
                </div>
                <div class="form-group">
                    <label class="form-label">Tipo de Operación</label>
                    <select id="prodTipo" class="form-input">
                        <option value="Elaboración de mosto">Elaboración de mosto</option>
                        <option value="Envasado">Envasado</option>
                        <option value="Mermas">Mermas</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Número de Lote</label>
                    <input type="number" id="prodLote" class="form-input" placeholder="Ej: 1">
                </div>
                <div class="form-group">
                    <label class="form-label">Estilo de Cerveza</label>
                    <select id="prodEstilo" class="form-input">
                        <option value="Lager">Lager</option>
                        <option value="IPA">IPA</option>
                        <option value="Gorri">Gorri</option>
                        <option value="Red Ale">Red Ale</option>
                        <option value="Stout">Stout</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Volumen (L)</label>
                    <input type="number" id="prodVolumen" class="form-input" placeholder="Ej: 160">
                </div>
                <div class="form-group">
                    <label class="form-label">Costo (€)</label>
                    <input type="number" id="prodCosto" class="form-input" step="0.01" placeholder="Ej: 46.27">
                </div>
                <button class="btn btn-primary" onclick="saveProduction()" style="width: 100%;">Guardar Operación</button>
            `;
            
            showModal('Nueva Operación de Producción', form);
        }
        
        // Guardar producción
        async function saveProduction() {
            const productionData = {
                fecha: document.getElementById('prodFecha').value,
                tipo_operacion: document.getElementById('prodTipo').value,
                lote: document.getElementById('prodLote').value,
                estilo: document.getElementById('prodEstilo').value,
                volumen: parseFloat(document.getElementById('prodVolumen').value),
                costo: parseFloat(document.getElementById('prodCosto').value),
                estado: 'pendiente',
                usuario_id: currentUser.id,
                created_at: new Date().toISOString()
            };
            
            const { data, error } = await supabase
                .from('produccion')
                .insert([productionData]);
            
            if (error) {
                alert('Error al guardar: ' + error.message);
            } else {
                alert('Operación guardada correctamente');
                closeModal();
                loadModule('production');
            }
        }
        
        // Mostrar formulario de inventario
        function showInventoryForm(tipo) {
            const form = `
                <div class="form-group">
                    <label class="form-label">Material</label>
                    <input type="text" id="invMaterial" class="form-input" placeholder="Nombre del material">
                </div>
                <div class="form-group">
                    <label class="form-label">Tipo</label>
                    <input type="text" id="invTipo" class="form-input" value="${tipo}" readonly>
                </div>
                <div class="form-group">
                    <label class="form-label">Stock Actual</label>
                    <input type="number" id="invStock" class="form-input" placeholder="Cantidad">
                </div>
                <div class="form-group">
                    <label class="form-label">Unidad</label>
                    <select id="invUnidad" class="form-input">
                        <option value="Kg">Kilogramos (Kg)</option>
                        <option value="Un">Unidades (Un)</option>
                        <option value="L">Litros (L)</option>
                        <option value="g">Gramos (g)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Punto de Reorden</label>
                    <input type="number" id="invPuntoReorden" class="form-input" placeholder="Cantidad mínima">
                </div>
                <div class="form-group">
                    <label class="form-label">Costo Unitario (€)</label>
                    <input type="number" id="invCosto" class="form-input" step="0.01" placeholder="Ej: 0.89">
                </div>
                <button class="btn btn-primary" onclick="saveInventory()" style="width: 100%;">Guardar Material</button>
            `;
            
            showModal('Agregar Material al Inventario', form);
        }
        
